<?xml version="1.0" encoding="UTF-8"?>
<project name="extract_json" basedir=".">
	<property name="release" value="1.0.2" />
	<property name="src" location="../src" />
	<property name="test" location="../test" />
	<property name="build" location="../${ant.project.name}/build" />
	<property name="dist" location="../${ant.project.name}/dist" />
	<property name="docs" location="../docs" />
	<property name="release-name" value="${ant.project.name}_v${release}" />

	<target name="build" description="inline all library modules">
		<delete file="${test}/${ant.project.name}.py" />
		<exec executable="python" failonerror="true">
		    <arg value="${src}/build_${ant.project.name}.py"/>
		</exec>
	</target>

	<target name="test" description="test the script">
		<exec executable="python" failonerror="true">
		    <arg value="${test}/test_${ant.project.name}.py"/>
		</exec>
	</target>

	<target name="dist" description="generate the distribution">		
		<delete dir="${build}" />
		<mkdir dir="${build}" />
		<delete dir="${dist}" />
		<mkdir dir="${dist}" />
		<mkdir dir="${build}/${release-name}" />

		<copy file="${test}/${ant.project.name}.py" tofile="${build}/${release-name}/${ant.project.name}.py" />
		<replace encoding="utf-8" file="${build}/${release-name}/${ant.project.name}.py" token="@release" value="${release}" />

		<copy file="../LICENSE" todir="${build}/${release-name}" />

		<fixcrlf encoding="utf-8" eol="lf" srcdir="${test}" includes="**/*.*" />

		<zip destfile="${dist}/${release-name}.zip" basedir="${build}/${release-name}" />

		<copy file="${docs}/template/${ant.project.name}.md" overwrite="True" todir="${docs}" />
		<replace encoding="utf-8" file="${docs}/${ant.project.name}.md" token="${ant.project.name}_v0.99.0" value="${ant.project.name}_v${release}" />
	</target>

	<target name="clean" description="clean up">		
		<delete file="${test}/${ant.project.name}.py" />		
	</target>

</project>