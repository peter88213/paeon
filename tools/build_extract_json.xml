<?xml version="1.0" encoding="UTF-8"?>
<project name="extract_json" basedir=".">
	<property name="release" value="1.0.2" />
	<property name="src" location="../src" />
	<property name="test" location="../test" />
	<property name="build" location="../build" />
	<property name="dist" location="../dist" />
	<property name="docs" location="../docs" />
	<property name="project-name" value="${ant.project.name}" />
	<property name="release-name" value="${project-name}_v${release}" />

	<target name="build" description="inline all library modules">
		<delete file="${test}/extract_json.py" />
		<exec executable="python" failonerror="true">
		    <arg value="${src}/build_extract_json.py"/>
		</exec>
		<fixcrlf encoding="utf-8" eol="lf" srcdir="${test}" includes="**/*.py" />
	</target>

	<target name="test" description="test the script">
		<exec executable="python" failonerror="true">
		    <arg value="${test}/test_extract_json.py"/>
		</exec>
	</target>

	<target name="dist" description="generate the distribution">
		
		<delete dir="${build}" />
		<mkdir dir="${build}" />
		<delete dir="${dist}" />
		<mkdir dir="${dist}" />
		<mkdir dir="${build}/${release-name}" />

		<copy file="${test}/extract_json.py" tofile="${build}/${release-name}/extract_json.py" />
		<replace encoding="utf-8" file="${build}/${release-name}/extract_json.py" token="@release" value="${release}" />

		<copy file="../LICENSE" todir="${build}/${release-name}" />

		<zip destfile="${dist}/${release-name}.zip" basedir="${build}/${release-name}" />

		<copy file="${docs}/template/index.md" overwrite="True" todir="${docs}" />
		<replace encoding="utf-8" file="${docs}/index.md" token="extract_json_v0.99.0" value="extract_json_v${release}" />
	</target>

	<target name="clean" description="clean up">
		
		<delete file="${test}/extract_json.py" />
		
	</target>

</project>